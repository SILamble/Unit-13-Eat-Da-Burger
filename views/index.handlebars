<div class="row">
  <div class="column1">
    <h2>Burgers yet to be eaten</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="column2">
    <h1 class ="title", >Eat Da Burger!</h1>
    <img src="assets/img/burger.png" alt="Burger image" class = "bgImg">
    <h2>Create a burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label class="burgerName" , for="ca">Burger Name:</label>
        <br>
        <input class="textarea" , type="text" id="ca" name="name">
      </div>
      <button class="submit" , type="submit">Add your Burger</button>
    </form>
  </div>

  <div class="column3">
  <h2>Devoured Burgers</h2>
  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> devoured-block}}
    {{/if}}
    {{/each}}
  </ul>
</div>
</div>